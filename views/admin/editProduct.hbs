 <section class="content-main">
            <div class="row">
                <div class="col-6">
                    <div class="content-header">
                        <h2 class="content-title">Edit Product</h2>
                        <div>
                            
                            
                        </div>
                    </div>
                </div>
             
            </div>
         
            
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <form action="/admin/editProduct" method="POST" enctype="multipart/form-data" id="product-edit-form">
                            <input type="hidden" name="pkProductId" value={{product.[0].pkProductId}}>
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>1. General info</h6>
                                </div>
                                <div class="col-md-9">
                              
                                    <div class="mb-4">
                                        
                                        <label class="form-label">Product Title</label>
                                        <input name="strProductName" type="text" placeholder="Type here" class="form-control" value="{{product.[0].strProductName}}">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea name="strDescription" placeholder="Type here" class="form-control" rows="4">{{product.[0].strDescription}}</textarea>
                                    </div>
                                 
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>2. Pricing</h6>
                                </div>
                                <div class="col-md-9">
                                   
                                        <label class="form-label">Cost in INR</label>
                                        <input name="intPrice" type="number" placeholder="00.0" class="form-control numOnly" value={{product.[0].intPrice}} >
                                    
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-3">
                             <div class="row">
                                <div class="col-md-3">
                                    <h6>3. Stock</h6>
                                </div>
                                <div class="col-md-9">
                                   
                                        <label class="form-label">Stock</label>
                                        <input name="intStock" type="number" placeholder="0" class="form-control numOnly" value={{product.[0].intStock}}>
                                    
                                </div> <!-- col.// -->
                            </div>
                              <hr class="mb-4 mt-3">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>4. Category</h6>
                                </div>
                                  
                                          <div class="col-md-5">
                                        <select class="form-select" name="pkCategoryId">
                                         {{#if categories}} {{#each categories}}<option value="{{pkCategoryId}}">{{strCategoryName}}</option>{{/each}}{{/if}}
                                           
                                        </select>
                                    </div>
                                 <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-3">
                          
                             <div class="row">
                                <div class="col-md-9">
                                    <h6></h6>
                                </div>
                                
                                <div class="col-md-3">
                                    
                                         <button id="product-edit-submit" type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                                    
                                </div>
                                 <!-- col.// -->
                            </div>
                             <div>
                                    <h6
                                 id='errorMessage'
                                   style='color: red; text-align: center'
                                   ></h6>
                                   </div>
                           </form>
                          
                        </div>
                       
                    </div>
                    
                </div>

                {{!-- image --}}

                <div class="col-lg-8">
    <div class="row">
    <div class="col-4">
        <div class="mb-4">
            <label class="form-label">Main Image</label>
            <div id="imagePreviewContainer1" class="image-preview-container">
                <img id="previewImage1" src={{product.[0].mainProductUrl}} alt="Selected Image">
            </div>
            <input name="mainProductImg" class="form-control inputImage1" type="file" onchange="displaySelectedImage(this, 'imagePreviewContainer1', 'previewImage1')">
        </div>
    </div>
    <div class="col-4 ml-4">
        <div class="mb-4">
            <label class="form-label">Image-1</label>
            <div id="imagePreviewContainer2" class="image-preview-container">
                <img id="previewImage2" src={{imageUrl1}} alt="Selected Image">
            </div>
            <input name="otherProductImg1" class="form-control inputImage2" type="file" onchange="displaySelectedImage(this, 'imagePreviewContainer2', 'previewImage2')">
        </div>
    </div>
    <div class="col-4">
        <div class="mb-4">
            <label class="form-label">Image-2</label>
            <div id="imagePreviewContainer3" class="image-preview-container">
                <img id="previewImage3" src={{imageUrl2}} alt="Selected Image">
            </div>
            <input name="otherProductImg2" class="form-control inputImage3" type="file" onchange="displaySelectedImage(this, 'imagePreviewContainer3', 'previewImage3')">
        </div>
    </div>
</div>

 <div class="row">

    <div class="col-md-4 d-flex justify-content-end align-items-center">
    <button id="product-edit-image1"  class="btn btn-md rounded font-sm hover-up">Publish</button>
    </div>
     <div class="col-md-4  d-flex justify-content-end align-items-center">
    <button id="product-edit-image2"  class="btn btn-md rounded font-sm hover-up">Publish</button>
    </div>
     <div class="col-md-4  d-flex justify-content-end align-items-center">
    <button id="product-edit-image3"  class="btn btn-md rounded font-sm hover-up">Publish</button>
    </div>

 </div>
</div>
</div>
  
