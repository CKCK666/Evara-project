            </div>
        </section>

        

 <script>
function displaySelectedImage(input, previewContainerId) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $('#' + previewContainerId).find('img').attr('src', e.target.result);
            $('#' + previewContainerId + ' img').on('load', function () {
               
            });
        };

        reader.readAsDataURL(input.files[0]);
    }
}




  


</script>

