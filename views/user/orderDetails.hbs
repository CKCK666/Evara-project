 <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Order details
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 mb-sm-15">
                       {{#if deliveryAddress}}
                      
                          <div class="card-header">
                                                        <h5 class="mb-0">Shipping Address:{{#if isDefaultAddress}}<span style="color:rgb(13, 190, 13);">Default</span>{{/if}}</h5> 
                                                    </div>
                        <div class='card-body'>
                        <address>{{deliveryAddress.strFullName}}<br />
                          {{deliveryAddress.strPhoneNo}},<br />
                          {{deliveryAddress.strCity}}.
                          <br />{{deliveryAddress.intPinCode}}</address>
                        <p>{{deliveryAddress.strState}}</p>
                        <p>India</p>
                      
                      </div>
                      
                    {{/if}}
                   
                    </div>

                     <div class="col-md-6">
                        <div class="order_review">
                            <div class="mb-20">
                                <h4>Your Orders</h4>
                            </div>
                            <div class="table-responsive order_table text-center">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th colspan="2">Product</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if orderProducts}}
                                        {{#each orderProducts}}
                                        <tr>
                                            <td class="image product-thumbnail"><img src={{mainProductUrl}} alt="#"></td>
                                            <td>
                                                <h5><a href="shop-product-full.html">{{strDescription}}</a></h5> <span class="product-qty">x {{intQuantity}}</span>
                                            </td>
                                            <td>{{intTotalPrice}}</td>
                                        </tr>
                                        {{/each}}
                                        {{/if}}

                                        {{#if orderDetails}}
                                        {{#each orderDetails}}
                                        <tr>
                                            <th>Order Status</th>
                                            <td class="product-subtotal font-xl" {{#eq strOrderStatus 'Processing'}}style="color: orange"
                            {{else}}{{#eq strOrderStatus 'Delivered'}}style="color: green"
                           {{else}}{{#eq strOrderStatus 'Cancelled'}}style="color: red"
                             {{/eq}}
                             {{/eq}}
                            {{/eq}} colspan="2">{{strOrderStatus}}</td>
                                        </tr>
                                          <tr>
                                            <th>Payment Method</th>
                                            <td class="product-subtotal font-xl" colspan="2">{{strPaymentMethod}}</td>
                                        </tr>
                                        <tr>
                                            <th>SubTotal</th>
                                            <td class="product-subtotal" colspan="2">₹{{intTotalOrderPrice}}</td>
                                        </tr>
                                        <tr>
                                            <th>Shipping</th>
                                            <td colspan="2"><em>Free Shipping</em></td>
                                        </tr>
                                        <tr>
                                            <th>Total</th>
                                            <td colspan="2" class="product-subtotal"><span class="font-xl text-brand fw-900">₹{{intTotalOrderPrice}}</span></td>
                                        </tr>
                                        {{/each}}
                                        {{/if}}
                                    </tbody>
                                </table>
                            </div>
                            <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                            {{#eq orderDetails.[0].strOrderStatus 'Delivered'}}
                            {{else}}
                            {{#eq orderDetails.[0].strOrderStatus 'Cancelled'}}
                            {{else}}
                              <a 
                                href='#' data-pk-order-id="{{orderDetails.[0].pkOrderId}}" data-pk-user-id="{{orderDetails.[0].pkUserId}}" data-order-status-change="Cancelled"
                                class='btn-small d-block cancel-order-btn'
                              >  <button  class='btn btn-fill-out'>Cancel Order</button></a>
                           
                            {{/eq}}
                            {{/eq}}
                        </div>
                    </div>
                    
                </div>
              
            
                   
                
            </div>
        </section>