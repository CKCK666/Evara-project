<div class='page-header breadcrumb-wrap'>
  <div class='container'>
    <div class='breadcrumb'>
      <a href='/' rel='nofollow'>Home</a>

      <span></span>
      Account
    </div>
  </div>
</div>
<section class='pt-10 pb-150'>
  <div class='container'>
    <div class='row'>
      <div class='col-lg m-auto'>
        <div class='row'>
          <div class='col-md-3'>
            <div class='dashboard-menu'>
              <ul class='nav flex-column' role='tablist'>
                <li class='nav-item'>
                  <a
                    class='nav-link active'
                    id='account-detail-tab'
                    data-bs-toggle='tab'
                    href='#account-detail'
                    role='tab'
                    aria-controls='account-detail'
                    aria-selected='true'
                  ><i class='fi-rs-user mr-10'></i>Account details</a>
                </li>
                <li class='nav-item'>
                  <a
                    class='nav-link'
                    id='address-tab'
                    data-bs-toggle='tab'
                    href='#address'
                    role='tab'
                    aria-controls='address'
                    aria-selected='true'
                  ><i class='fi-rs-marker mr-10'></i>My Address</a>
                </li>
                <li class='nav-item'>
                  <a
                    class='nav-link'
                    id='orders-tab'
                    data-bs-toggle='tab'
                    href='#orders'
                    role='tab'
                    aria-controls='orders'
                    aria-selected='false'
                  ><i class='fi-rs-shopping-bag mr-10'></i>Orders</a>
                </li>

              </ul>
            </div>
          </div>
          <div class='col-md-9'>
            <div class='tab-content dashboard-content'>

              <div
                class='tab-pane fade'
                id='orders'
                role='tabpanel'
                aria-labelledby='orders-tab'
              >
                <div class='card'>
                  <div class='card-header'>
                    <h5 class='mb-0'>Your Orders</h5>
                  </div>
                  <div class='card-body'>
                    <div class='table-responsive'>
                      <table class='table'>
                        <thead>
                          <tr>
                            <th>Order</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#if userOrders}}
                          {{#each userOrders}}
                          <tr>
                            <td>{{pkOrderId}}</td>
                            <td>{{createdDate}}</td>
                            <td {{#eq strOrderStatus 'Processing'}}style="color: orange"
                            {{else}}{{#eq strOrderStatus 'Delivered'}}style="color: green"
                           {{else}}{{#eq strOrderStatus 'Cancelled'}}style="color: red"
                             {{/eq}}
                             {{/eq}}
                            {{/eq}}>
                             {{strOrderStatus}}
                             </td>
                            <td>{{intTotalOrderPrice}}</td>
                            <td>
                            
                                 {{!-- <a style="color: red;"
                                href='#' data-pk-order-id="{{pkOrderId}}" data-pk-user-id="{{pkUserId}}" data-order-status-change="Cancelled"
                                class='btn-small d-block cancel-order-btn'
                              >Cancel Order</a> --}}
                                  <a 
                                href='/getOrderDetails?pkOrderId={{pkOrderId}}&pkUserId={{pkUserId}}'
                                class='btn-small d-block'
                              >View details</a>
                               
                              </td>
                           

                              
                             
                              </td>
                          </tr>
                          {{/each}}
                           {{/if}}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <div
                class='tab-pane fade'
                id='track-orders'
                role='tabpanel'
                aria-labelledby='track-orders-tab'
              >
              
              </div>
              <div
                class='tab-pane fade'
                id='address'
                role='tabpanel'
                aria-labelledby='address-tab'
              >  
            
                <div class='row'>
                  <div class="col-lg-8">
                    <div class="row">
                      {{#if arrAddress}}
                     
                      {{#each arrAddress.[0].arrAddress}}
                  <div class='col-md-6'>
                    <div class='card mb-3 mb-lg-0'>
               
                      <div class='card-header'>
                        <h5 class='mb-0'>Address:{{#if isDefaultAddress}} <span style="color:rgb(13, 190, 13);">Default</span>   {{/if}}</h5>
                      </div>
                      <div class='card-body'>
                        <address>{{strFullName}}<br />
                          {{strPhoneNo}},<br />
                          {{strCity}}.
                          <br />{{intPinCode}}</address>
                        <p>{{strState}}</p>
                        <p>India</p>
                        <a href='/getEditAddress?pkAddressId={{pkAddressId}}&pkUserId={{pkUserId}}' class='btn-small'>Edit</a>
                        <a href="#" onclick="deleteAddress('{{pkAddressId}}','{{pkUserId}}')" class='btn-small ml-5'>Remove</a>
                      {{#if isDefaultAddress}}  {{else}} <a href='#'  data-pk-address-id="{{pkAddressId}}" data-pk-user-id="{{pkUserId}}" class='btn-small ml-5 set-as-default'>Set as default</a>{{/if}}
                      </div>
                    </div>
                  </div>
                  {{/each}}
                   {{/if}}
                    </div>
                   
                  </div>

                  <div class="col-lg-4">
                     
                <a href="/getAddAddress?pkUserId={{arrAddress.[0].pkUserId}}" class="btn btn-primary btn-sm rounded">Create new</a>
                  </div>
                
                  
                 
                </div>
              
              </div>
              <div
                class='tab-pane fade active show'
                id='account-detail'
                role='tabpanel'
                aria-labelledby='account-detail-tab'
              >
                <div class='card'>
                  <div class='card-header'>
                    <h5>Account Details</h5>
                  </div>
                  <div class='card-body'>

                    <form id="user-profile-form" name='enq'>
                      <input type="hidden" name="pkUserId" value="{{arrAddress.[0].pkUserId}}">
                      <div class='row'>
                        <div class='col-md-6'>
                          <div class='form-group'>
                            <label>Username
                              <span class='required'>*</span></label>
                            <input
                            value="{{arrAddress.[0].strUserName}}"
                              required=''
                              class='form-control square'
                              name='name'
                              type='text'
                            />
                          </div>

                          <div class='form-group'>
                            <label>Email Address
                              <span class='required'></span></label>
                            <input
                              value="{{arrAddress.[0].strEmail}}"
                              required=''
                              class='form-control square'
                              name='email'
                              type='email'
                            />
                          </div>

                          <div class='form-group'>
                            <label>Current Password
                              <span class='required'></span></label>
                            <input
                              required=''
                              class='form-control square'
                              name='password'
                              type='password'
                            />
                          </div>

                          <div class='form-group'>
                            <label>New Password
                              <span class='required'></span></label>
                            <input
                              required=''
                              class='form-control square'
                              name='npassword'
                              type='password'
                            />
                          </div>

                          <div class='form-group'>
                            <label>Confirm Password
                              <span class='required'></span></label>
                            <input
                              required=''
                              class='form-control square'
                              name='cpassword'
                              type='password'
                            />
                          </div>
                        </div>

                        <div class='col-md-6'>
                          <div class='large-div'>
                            <!-- Your content for the large div here -->
                          </div>
                        </div>
   
                        <div class='col-md-12'>
                          <button
                           id="user-profile-edit-btn"
                            class='btn btn-fill-out submit'
                            name='submit'
                            value='Submit'
                          >Save</button>
                        </div>
                      </div>
                      <h6 id='errorMessage' style='color: red; text-align: center' ></h6>
                    </form>

                  </div>
                </div>
              </div>
              <div
                class='tab-pane fade'
                id='logout'
                role='tabpanel'
                aria-labelledby='logout'
              >
                <div class='row'>
                  <div class='col-lg-6'>
                    <div class='card mb-3 mb-lg-0'>
                      <div class='card-header'>
                        <h5 class='mb-0'>Billing</h5>
                      </div>
                      <div class='card-body'>
                        <address>3522 Interstate<br />
                          75 Business Spur,<br />
                          Sault Ste.
                          <br />Marie, MI 49783</address>
                        <p>New York</p>
                        <a href='#' class='btn-small'>Edit</a>
                      </div>
                    </div>
                  </div>
                
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>

  .form-control.error:not(#search-form-control){
        border-color: red;}
</style>